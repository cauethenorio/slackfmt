{
  "name": "slackfmt",
  "packageManager": "pnpm@10.30.1",
  "private": true,
  "description": "Format Markdown and HTML to paste into Slack with styles preserved.",
  "type": "module",
  "scripts": {
    "clean": "rm -rf packages/core/dist packages/cli/dist packages/clipboard/target",
    "build": "pnpm -r run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "publish-packages": "pnpm -r run build && changeset publish",
    "lint": "pnpm lint:biome && pnpm lint:rust",
    "lint:biome": "biome check .",
    "lint:rust": "cargo fmt --manifest-path packages/clipboard/Cargo.toml -- --check && cargo clippy --manifest-path packages/clipboard/Cargo.toml",
    "lint:fix": "biome check --write .",
    "format": "pnpm format:biome && pnpm format:rust",
    "format:biome": "biome format --write .",
    "format:rust": "cargo fmt --manifest-path packages/clipboard/Cargo.toml"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^22.0.0",
    "rimraf": "^6.1.3",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
